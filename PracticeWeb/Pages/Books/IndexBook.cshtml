@page
@model PracticeWeb.Pages.Books.IndexBookModel
@{

}

<br />
<div>
    <a class="btn-primary btn-sm" href="/Books/CreateBook">Create New Book</a>
</div>
<h1> BOOKS LIST </h1>
<table class="table">
    <thead>
        <tr>
            <th>
                BOOK CODE
            </th>
            <th>
                BOOK TITLE
            </th>
            <th>
                AUTHOR
            </th>
            <th>
                PUBLICATION
            </th>
            <th>
                PRICE
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Books book in Model.booksList)
        {
            <tr>
                <td>
                    @book.BookCode
                </td>
                <td>
                    @book.BookTitle
                </td>
                <td>
                    @book.Author
                </td>
                <td>
                    @book.Publication
                </td>
                <td>
                    @book.Price
                </td>
                <td>
                    <a class="btn-primary" href="/Books/UpdateBook?BookCode=@book.BookCode"> Edit </a>
                </td>
                <td>
                    <a class="alert-danger"> Delete </a>
                </td>
            </tr>
        }
        
    </tbody>
</table>

